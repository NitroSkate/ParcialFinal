extends layout

block content
  body
    header.header
      h1 Administrador de tareas
    div
      form(name="formC", action="/api/colegios", method="post")
        label(for="nombre") Nombre del colegio:
        input#nombre(type="text", name="nombre", placeholder="Nombre del colegio", required)
        label(for="linea") Linea o compañia:
        input#linea(type="text", name="linea", placeholder="Linea o compañia", required)
        label(for="mensua") Mensualidad:
        input#mensua(type="number", name="mensua", required)
        input(type="submit" value="Ingresar datos")
